{
    "name": "chat-app-ops",
    "version": "...",
    "author": "...",
    "description": "...",

    "operations": {
        "deploy": {
            "artifacts": {
                "chat-app": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed; git must be installed",
                    "config": {
                        "command": "git clone https://git-server/chatapp.git && cd chatapp && node app.js"
                    }
                },
                "mongodb": {
                    "runner": "command-runner",
                    "comment": "MongoDB 2.6 or better must be installed",
                    "config": {
                        "command": "mongod --syslog --maxConns 10"
                    }
                }
            },
            "dependencies": [
                [ "chat-app", "mongodb" ]
            ]
        }
    }
}