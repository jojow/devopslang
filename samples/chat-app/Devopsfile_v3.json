{
    "name": "chat-app",
    "version": "...",
    "author": "...",
    "description": "...",

    "operations": {
        "build": {
            "artifacts": {
                "install-deps": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "npm install"
                    }
                }
            }
        },
        "start": {
            "artifacts": {
                "chat-app": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "node app.js"
                    }
                },
                "mongodb": {
                    "runner": "command-runner",
                    "comment": "MongoDB 2.6 or better must be installed",
                    "config": {
                        "command": "mongod"
                    }
                }
            },
            "dependencies": [
                [ "chat-app", "mongodb" ]
            ]
        },
        "deploy": {
            "artifacts": {
                "build": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "build"
                    }
                },
                "start": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "start"
                    }
                }
            },
            "dependencies": [
                [ "start", "build" ]
            ]
        }
    }
}