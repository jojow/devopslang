{
    "name": "chatapp",
    "version": "...",
    "author": "...",
    "description": "...",

    "operations": {
        "build": {
            "artifacts": {
                "install-deps": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "npm install"
                    }
                }
            }
        },
        "start": {
            "artifacts": {
                "chatapp": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "node app.js"
                    }
                }
            }
        },
        "deploy": {
            "artifacts": {
                "build-app": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "build"
                    }
                },
                "start-app": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "start"
                    }
                }
            },
            "dependencies": [
                [ "start-app", "build-app" ]
            ]
        }
    }
}