{
    "name": "chatapp",
    "version": "...",
    "author": "...",
    "description": "...",

    "operations": {
        "build": {
            "artifacts": {
                "get-app": {
                    "runner": "command-runner",
                    "comment": "git must be installed",
                    "config": {
                        "command": "git clone https://git-server/chatapp.git"
                    }
                },
                "install-deps": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "npm install",
                        "cwd": "./chatapp"
                    }
                },
                "run-tests": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "test"
                    }
                }
            },
            "dependencies": [
                [ "install-deps", "get-app" ],
                [ "run-tests", "install-deps" ]
            ]
        },
        "test": {
            "artifacts": {
                "unit-tests": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "./node_modules/mocha/bin/mocha"
                    }
                }
            }
        },
        "start": {
            "artifacts": {
                "chatapp": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "node app.js",
                        "cwd": "./chatapp"
                    }
                },
                "mongodb": {
                    "runner": "command-runner",
                    "comment": "MongoDB 2.6 or better must be installed",
                    "config": {
                        "command": "mongod --syslog --maxConns 10"
                    }
                }
            },
            "dependencies": [
                [ "chat-app", "mongodb" ]
            ]
        },
        "deploy": {
            "artifacts": {
                "build-app": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "build"
                    }
                },
                "start-app": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "start"
                    }
                }
            },
            "dependencies": [
                [ "start-app", "build-app" ]
            ]
        }
    }
}