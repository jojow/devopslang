{
    "name": "chat-app",
    "version": "...",
    "author": "...",
    "description": "...",

    "operations": {
        "build": {
            "artifacts": {
                "get-app": {
                    "runner": "command-runner",
                    "comment": "git must be installed",
                    "config": {
                        "command": "git clone https://git-server/chatapp.git"
                    }
                },
                "install-deps": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "npm install",
                        "cwd": "./chatapp"
                    }
                }
            },
            "dependencies": [
                [ "install-deps", "get-app" ]
            ]
        },
        "start": {
            "artifacts": {
                "chat-app": {
                    "runner": "command-runner",
                    "comment": "Node.js 0.10 or better must be installed",
                    "config": {
                        "command": "node app.js",
                        "cwd": "./chatapp"
                    }
                },
                "mongodb": {
                    "runner": "command-runner",
                    "comment": "MongoDB 2.6 or better must be installed",
                    "config": {
                        "command": "mongod --syslog --maxConns 10"
                    }
                }
            },
            "dependencies": [
                [ "chat-app", "mongodb" ]
            ]
        },
        "deploy": {
            "artifacts": {
                "build": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "build"
                    }
                },
                "start": {
                    "runner": "operation-runner",
                    "config": {
                        "operation": "start"
                    }
                }
            },
            "dependencies": [
                [ "start", "build" ]
            ]
        }
    }
}